<div data-page-mode="wpSites">
    
    <header class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 pb-4 border-b border-slate-700">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Quản lý Wordpress Sites</h1>
            <p class="text-slate-400 mt-1">Thêm, sửa, xoá các site con Wordpress</p>
        </div>
        <button id="btn-open-wp-modal" class="inline-flex items-center justify-center rounded-md bg-emerald-600 px-3.5 py-2 text-sm font-medium text-white shadow-sm hover:bg-emerald-700 transition-all mt-4 sm:mt-0">
            <i class="ri-add-line -ml-1 mr-2"></i>
            Thêm Site Mới
        </button>
    </header>

    <div id="alert-container-wp" class="mb-6">
    </div>

    <div class="w-full">
        <div class="bg-slate-800/60 backdrop-blur-lg ring-1 ring-white/10 shadow-xl rounded-lg overflow-hidden">
            <div class="table-container">
                <table class="min-w-full">
                    <thead class="bg-slate-900/50 sticky top-0">
                        <tr>
                            <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white sm:pl-6 w-2/5">Tên Site</th>
                            <th class="px-3 py-3.5 text-left text-sm font-semibold text-white w-2/5">URL</th>
                            <th class="py-3.5 pl-3 pr-4 sm:pr-6 w-1/5 text-center text-sm font-semibold text-white">Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="wp-sites-table-body" class="divide-y divide-slate-800">
                        </tbody>
                </table>
                
                <div id="wp-table-placeholder" class="hidden">
                    <div class="p-12 text-center text-slate-500">
                        <i class="ri-database-2-line text-5xl"></i>
                        <p class="mt-4 text-lg">Chưa có site Wordpress nào.</p>
                    </div>
                </div>
            </div>
        </div>
    </div> 

    <script>
        var initialWpSites = <%- JSON.stringify(wpSites || []) %>;
    </script>

    <div id="wpSiteModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
        <div id="wpSiteModalBackdrop" class="fixed inset-0 bg-black/70 backdrop-blur-sm"></div>
        
        <div class="relative w-full max-w-lg bg-slate-800/80 backdrop-blur-lg ring-1 ring-white/10 rounded-lg shadow-xl overflow-hidden flex flex-col">
            
            <div class="flex-shrink-0 p-4 border-b border-slate-700/50 flex items-center justify-between">
                <h3 id="wp-form-title" class="text-xl font-semibold text-white truncate">
                    </h3>
                <button id="wpSiteModalCloseBtn" class="text-slate-400 hover:text-white transition-colors">
                     <i class="ri-close-line text-2xl"></i>
                </button>
            </div>
            
            <div id="wp-modal-body" class="overflow-y-auto p-6">
                <form id="wp-site-form" class="space-y-4">
                    <input type="hidden" id="wp-site-id" name="id" value="">

                    <div>
                        <label for="wp-site-name" class="block text-sm font-medium text-slate-300 mb-2">Tên Site</label>
                        <input type="text" id="wp-site-name" name="siteName" class="w-full p-3 bg-slate-900/70 border border-slate-700 rounded-md text-slate-200 focus:ring-2 focus:ring-emerald-500 transition" placeholder="Vd: Blog Tin Tức" required>
                    </div>
                    <div>
                        <label for="wp-site-url" class="block text-sm font-medium text-slate-300 mb-2">URL Site</label>
                        <input type="url" id="wp-site-url" name="siteUrl" class="w-full p-3 bg-slate-900/70 border border-slate-700 rounded-md text-slate-200 focus:ring-2 focus:ring-emerald-500 transition" placeholder="https://blog.example.com" required>
                        <p class="text-xs text-slate-500 mt-1">Phải bao gồm https://</p>
                    </div>
                    <div>
                        <label for="wp-api-key" class="block text-sm font-medium text-slate-300 mb-2">API Key</label>
                        <input type="password" id="wp-api-key" name="apiKey" class="w-full p-3 bg-slate-900/70 border border-slate-700 rounded-md text-slate-200 focus:ring-2 focus:ring-emerald-500 transition" placeholder="Nhập chuỗi API Key bí mật" required>
                    </div>

                    <div class="pt-2">
                        <button id="wp-form-submit" type="submit" class="w-full flex justify-center items-center p-3 bg-gradient-to-r from-emerald-500 to-cyan-600 hover:from-emerald-600 hover:to-cyan-700 text-white font-bold rounded-lg shadow-lg transform hover:scale-[1.02] transition-all duration-300 disabled:from-slate-600 disabled:to-slate-700 disabled:cursor-not-allowed">
                            <i id="wp-btn-icon" class="ri-add-line text-2xl -ml-1 mr-2"></i>
                            <span id="wp-btn-text">Thêm Site</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
<h1 class="text-3xl font-bold text-white mb-6 tracking-tight">Thùng rác</h1>
<p class="text-slate-400 -mt-4 mb-6">Nơi chứa các app đã bị "vứt". Bro có thể khôi phục hoặc xoá vĩnh viễn.</p>

<div class="mb-4">
    <form method="GET" action="/trash">
        <div class="relative">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <i class="ri-search-line text-slate-400"></i>
            </div>
            <input type="text" name="search" id="saved-search"
                class="block w-full rounded-md border-0 bg-slate-800/60 py-2.5 pl-10 text-white ring-1 ring-inset ring-white/10 placeholder:text-slate-500 focus:ring-2 focus:ring-inset focus:ring-emerald-500 sm:text-sm"
                placeholder="Tìm trong thùng rác..."
                value="<%= typeof search !== 'undefined' ? search : '' %>">
        </div>
    </form>
</div>

<div id="selection-controls" class="hidden mb-4 p-4 bg-slate-800/60 backdrop-blur-lg ring-1 ring-white/10 rounded-lg flex items-center justify-between">
    <div>
        <span id="selection-count" class="text-sm font-medium text-white">Đã chọn 0 app</span>
        <div id="select-all-container" class="ml-4 inline-block hidden">
            <button id="btn-select-all-db" class="text-sm text-emerald-400 hover:text-emerald-300 font-medium">
                Chọn tất cả <span class="font-bold"><%= pagination.totalItems %></span> app (toàn bộ thùng rác)
            </button>
        </div>
    </div>
    <div class="space-x-3">
        <button id="btn-restore-selected" class="inline-flex items-center justify-center rounded-md bg-emerald-600/90 px-3.5 py-2 text-sm font-medium text-white shadow-sm hover:bg-emerald-700 disabled:opacity-50 disabled:cursor-not-allowed">
            <i class="ri-arrow-go-back-line -ml-1 mr-2"></i>
            Khôi phục
        </button>
        <button id="btn-force-delete-selected" class="inline-flex items-center justify-center rounded-md bg-red-800/90 px-3.5 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-900 disabled:opacity-50 disabled:cursor-not-allowed">
            <i class="ri-delete-bin-2-line -ml-1 mr-2"></i>
            Xoá vĩnh viễn
        </button>
    </div>
</div>

<div id="panel-saved" class="tab-panel h-full flex flex-col bg-slate-800/60 backdrop-blur-lg ring-1 ring-white/10 shadow-xl rounded-lg overflow-hidden">
    
    <div id="table-container-saved" class="flex-1 overflow-y-auto">
        <table class="min-w-full divide-y divide-slate-700/50">
            <thead class="bg-slate-900/50 sticky top-0 backdrop-blur-md z-10">
                <tr>
                    <th class="px-4 sm:px-6 py-3.5 w-12">
                        <label for="select-all-page" class="sr-only">Select all apps on page</label>
                        <input type="checkbox" id="select-all-page" class="h-4 w-4 rounded border-slate-600 bg-slate-800 text-emerald-500 focus:ring-emerald-600">
                    </th>
                    <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white w-3/5">App</th>
                    <th class="px-3 py-3.5 text-left text-sm font-semibold text-white w-1/5">Loại</th>
                    <th class="px-3 py-3.5 text-left text-sm font-semibold text-white w-1/5">Ngày xoá</th>
                    <th class="relative py-3.5 pl-3 pr-4 sm:pr-6 w-24 text-center">
                        Hành động
                    </th>
                </tr>
            </thead>
            <tbody id="app-table-body-saved" class="divide-y divide-slate-800">
                </tbody>
        </table>
        
        <div id="table-placeholder-saved" class="p-8 text-center text-slate-500 hidden">
            <i class="ri-inbox-archive-line text-4xl"></i>
            <p class="mt-2">Thùng rác trống. Tốt!</p>
        </div>
    </div>

    <% if (typeof pagination !== 'undefined' && pagination.totalPages > 1) { %>
        <% 
            const currentPage = pagination.currentPage;
            const totalPages = pagination.totalPages;
            const window = 2; 
            const searchQuery = (typeof search !== 'undefined' && search) ? `&search=${encodeURIComponent(search)}` : ''; 
        %>
        <nav class="flex-shrink-0 flex items-center justify-between border-t border-slate-700/50 bg-slate-800/60 backdrop-blur-lg px-4 py-3 sm:px-6"
             aria-label="Pagination">
            
            <div class="hidden sm:block">
                <p class="text-sm text-slate-400">
                    Hiển thị
                    <span class="font-medium text-white"><%= (pagination.currentPage - 1) * pagination.limit + 1 %></span>
                    tới
                    <span class="font-medium text-white"><%= Math.min(pagination.currentPage * pagination.limit, pagination.totalItems) %></span>
                    của
                    <span class="font-medium text-white"><%= pagination.totalItems %></span>
                    kết quả
                </p>
            </div>
            
            <div class="flex-1 flex justify-between sm:justify-end items-center space-x-1">
                <% 
                    const linkClass = "relative inline-flex items-center rounded-md px-3 py-2 text-sm font-medium text-slate-300 ring-1 ring-inset ring-slate-700 hover:bg-slate-700";
                    const activeClass = "relative z-10 inline-flex items-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-medium text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600";
                    const disabledClass = "relative inline-flex items-center rounded-md bg-slate-900/50 px-3 py-2 text-sm font-medium text-slate-500 ring-1 ring-inset ring-slate-700/50 cursor-not-allowed";
                    const dotsClass = "relative inline-flex items-center px-3 py-2 text-sm font-medium text-slate-500";
                %>
                
                <% if (currentPage > 1) { %>
                    <a href="/trash?page=<%= currentPage - 1 %><%= searchQuery %>" class="<%= linkClass %>">
                        <i class="ri-arrow-left-s-line"></i>
                    </a>
                <% } else { %>
                    <span class="<%= disabledClass %>"><i class="ri-arrow-left-s-line"></i></span>
                <% } %>

                <% 
                    let pagesToShow = [];
                    pagesToShow.push(1);
                    if (currentPage - window > 2) { pagesToShow.push('...'); }
                    for (let i = Math.max(2, currentPage - window); i <= Math.min(totalPages - 1, currentPage + window); i++) { pagesToShow.push(i); }
                    if (currentPage + window < totalPages - 1) { pagesToShow.push('...'); }
                    if (totalPages > 1) { pagesToShow.push(totalPages); }
                    pagesToShow = [...new Set(pagesToShow)]; 
                %>

                <% for (const pageNum of pagesToShow) { %>
                    <% if (pageNum === '...') { %>
                        <span class="<%= dotsClass %>">...</span>
                    <% } else if (pageNum === currentPage) { %>
                        <span class="<%= activeClass %>"><%= pageNum %></span>
                    <% } else { %>
                        <a href="/trash?page=<%= pageNum %><%= searchQuery %>" class="<%= linkClass %>">
                            <%= pageNum %>
                        </a>
                    <% } %>
                <% } %>

                <% if (currentPage < totalPages) { %>
                    <a href="/trash?page=<%= currentPage + 1 %><%= searchQuery %>" class="<%= linkClass %>">
                        <i class="ri-arrow-right-s-line"></i>
                    </a>
                <% } else { %>
                    <span class="<%= disabledClass %>"><i class="ri-arrow-right-s-line"></i></span>
                <% } %>
            </div>
        </nav>
    <% } %>
</div>

